{
  "name": "omegad-biz/fault-manager",
  "description": "Fault Manager library by Omega Business Development",
  "type": "library",
  "keywords": ["error handling", "exception handling", "error", "exception", "handler"],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Omega Business Development Limited",
      "email": "info@omegad.biz"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.1",
    "hoa/event": "2.17.08.30",
    "hoa/exception": "2.17.08.30",
    "league/flysystem": "^1.0.44",
    "zendframework/zend-code": "^3.3"
  },
  "require-dev": {
    "mockery/mockery": "^1.0",
    "phpunit/phpunit": "^7.1",
    "symfony/var-dumper": "^4.0"
  },
  "autoload": {
    "classmap": ["_compiled/"],
    "files": ["src/Autoloader.php"],
    "psr-4": {
      "Omega\\FaultManager\\": "src/"
    }
  },
  "autoload-dev": {
    "files": ["tests/TestAutoloader.php"],
    "psr-4": {
      "Omega\\FaultManagerTests\\": "tests/unit/"
    }
  },
  "scripts": {
    "test": [
      "@compiled-clear-tests",
      "phpunit --no-coverage"
    ],
    "test-coverage": [
      "@compiled-clear-tests",
      "phpunit"
    ],
    "compiled-clear": "rm -f _compiled/*.php",
    "compiled-clear-tests": "rm -f tests/_compiled/*.php",
    "compiled-clear-all": [
      "@compiled-clear",
      "@compiled-clear-tests"
    ]
  },
  "scripts-descriptions": {
    "test": "Running phpunit without coverage",
    "test-coverage": "Running phpunit with coverage"
  }
}
