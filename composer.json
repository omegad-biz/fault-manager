{
  "name": "omegad-biz/fault-manager",
  "description": "Fault Manager library by Omega Business Development",
  "type": "library",
  "keywords": ["error handling", "exception handling", "error", "exception", "handler"],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Omega Business Development Limited",
      "email": "info@omegad.biz"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.1",
    "hoa/event": "2.17.08.30",
    "hoa/exception": "2.17.08.30",
    "mockery/mockery": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.1",
    "symfony/var-dumper": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "Omega\\FaultManager\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover tests/coverage/clover.xml"
  }
}
